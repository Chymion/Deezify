<?xml version="1.0" encoding="UTF-8"?>

<web-app 
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
	
	<servlet>
        <servlet-name> Accueil </servlet-name>
        <servlet-class> controller.ServletAccueil </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name> Accueil </servlet-name>
        <url-pattern> / </url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name> Recommandation </servlet-name>
        <servlet-class> controller.ServletRecommandation </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name> Recommandation </servlet-name>
        <url-pattern> /Recommandations </url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name> Ma Musique </servlet-name>
        <servlet-class> controller.ServletMaMusique </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name> Ma Musique </servlet-name>
        <url-pattern> /Musique </url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name> Explorer </servlet-name>
        <servlet-class> controller.ServletExplorer </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name> Explorer </servlet-name>
        <url-pattern> /Explorer </url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name> Profil </servlet-name>
        <servlet-class> controller.ServletProfil </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name> Profil </servlet-name>
        <url-pattern> /Profil </url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name> Connexion </servlet-name>
        <servlet-class> controller.ServletConnexion </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name> Connexion </servlet-name>
        <url-pattern> /Connexion </url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name> Inscription </servlet-name>
    	<servlet-class> controller.ServletInscription </servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name> Inscription </servlet-name>
    	<url-pattern> /Inscription </url-pattern>
    </servlet-mapping>
    
	
</web-app>